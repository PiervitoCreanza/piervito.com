---
import { Icon } from "astro-icon/components";
interface Props {
  icon: string;
  title: string;
  description: string;
}
const { icon, title, description } = Astro.props;
---

<section class="mt-20">
  <Icon
    id={icon}
    name={icon}
    class="mx-auto w-32 h-32 stroke-black dark:stroke-white stroke-2"
  />
  <h1 class="text-center" data-aos="fade">{title}</h1>
  <p class="lead text-center" data-aos="fade">
    {description}
  </p>
  <slot />
</section>
